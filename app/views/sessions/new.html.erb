<body class="welcome">
	<div class="container">
		<div class="row emailWidth">
	        <div class="col-md-12">
	            <div class="wrap">
	                <p class="form-title">
						Sign In For Couples</p>    
						<%= form_for @couple, url: sessions_path, method: "post", :html => {:class => "loginForm"} do |f| %>
						    <div>
						        <%= f.text_field :email, placeholder: "Email", class: "emailSpace"  %>
						    </div>
						    <div>
						        <%= f.password_field :password_digest, placeholder: "Password", class: "emailSpace"  %>
						    </div>
						    
						    <%= f.submit "Login", class: "signInButton" %>
						<% end %>

						<div>
						  <div class="heart x1"></div>
						  <div class="heart x2"></div>
						  <div class="heart x3"></div>
						  <div class="heart x4"></div>
						  <div class="heart x5"></div>
						</div>
				</div>
			</div>
		</div>
	</div>
</body>