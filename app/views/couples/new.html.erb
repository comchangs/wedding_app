<body class="welcome">
	<div class="container">
		<div class="row emailWidth">
        	<div class="col-md-12">
				<div class="wrap">
					<p class="form-title">
				        Sign Up</p>	
							<%= form_for @couple, url: "/couples", method: "post", :html => {:class => "loginForm"} do |f| %>
								<% if @couple.errors.any? %>
									<h3>Errors:</h3>
										<% @couple.errors.full_messages.each do |message| %>
											<h5><%= message %></h5>
										<% end %>
								<% end %>
								<%= f.text_field :name1, placeholder: "Name One", required: true, class: "emailSpace" %><br>
								<%= f.text_field :name2, placeholder: "Name Two", required: true, class: "emailSpace" %><br>
								<%= f.text_field :date, placeholder: "date of the wedding", required: true, class: "emailSpace" %><br>
								<%= f.email_field :email, placeholder: "Email", required: true, class: "emailSpace" %><br>
								<%= f.password_field :password, placeholder: "Password", required: true, class: "emailSpace" %><br>
								<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", required: true, class: "emailSpace" %><br>
								<%= f.submit "Sign Up", class: "signInButton" %><br>
							<% end %>
							<div>
							  <div class="heart x1"></div>
							  <div class="heart x2"></div>
							  <div class="heart x3"></div>
							  <div class="heart x4"></div>
							  <div class="heart x5"></div>
							</div>
				</div>
			</div>
		</div>
	</div>
</body>